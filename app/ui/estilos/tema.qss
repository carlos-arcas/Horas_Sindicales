QWidget { background: #F4F6FA; color: #17212F; font-size: 13px; }
QFrame[card="true"] { background: #FFFFFF; border: 1px solid #DFE5F0; border-radius: 10px; }
QPushButton { background: #FFFFFF; border: 1px solid #C2CBDA; border-radius: 6px; padding: 6px 12px; }
QPushButton[variant="primary"] { background: #2D6CDF; color: #FFFFFF; border-color: #2D6CDF; }
QPushButton[variant="secondary"] { background: #EAF0FF; color: #1D4AA6; border-color: #BED0FF; }
QLabel[role="secondary"] { color: #5C6B80; }
QFrame#sidebar { background: #FFFFFF; border: 1px solid #DFE5F0; border-radius: 10px; }
QFrame#sidebar QPushButton { text-align: left; padding: 10px 12px; min-height: 52px; }
QFrame#sidebar QPushButton[active="true"] { background: #FFF1F3; color: #8B1E2D; border-color: #F4C8CF; border-left: 3px solid #C62839; font-weight: 600; }
